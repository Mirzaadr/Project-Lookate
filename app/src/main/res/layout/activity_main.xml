<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/look"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:textSize="22sp"
        android:textColor="@color/myBlue"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/food_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/makanan"
        android:clickable="true"
        android:onClick="openFood"/>

    <ImageView
        android:id="@+id/transport_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/transport"
        android:clickable="true"
        android:onClick="openTransport"/>

    <ImageView
        android:id="@+id/resident_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/penginapan"
        android:clickable="true"
        android:onClick="openResiden"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/shop_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/toko"
            android:clickable="true"
            android:onClick="openShop"/>

        <ImageView
            android:id="@+id/public_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pelayanan"
            android:clickable="true"
            android:onClick="openPublicplace"/>


</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/moto"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/copyright"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>